{
  "parserOptions": {
    "ecmaVersion": 10
  },
  "rules": {
    "no-undef": "off",
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "no-trailing-spaces": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "indent": [
      "error",
      4
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ]
  },
  "extends": "eslint:recommended"
}